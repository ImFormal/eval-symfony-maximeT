{% extends 'base.html.twig' %}

{% block title %}Liste des tasks{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Liste des tasks</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for task in tasks %}
                <div class="bg-white shadow-lg rounded-lg p-4" id="account-{{ task.id }}">
                    <h2 class="text-xl font-semibold">{{ task.title }}</h2>
                    <p class="text-black-700">{{ task.content }}</p>
                    <p class="text-gray-700">{{ task.createdAt|date('d/m/Y') }} - {{ task.expiredAt|date('d/m/Y') }}</p>                    
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
